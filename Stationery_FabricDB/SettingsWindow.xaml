<Window x:Class="Stationery_FabricDB.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stationery_FabricDB"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="800" MaxHeight="500" MinHeight="500" MaxWidth="800" MinWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="label" Text="Выберите запись" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,10"/>

            <DataGrid x:Name="datagrid" BorderBrush="#FF7290AD" Background="#FFD0D0D0" Margin="0,0,0,10" Height="350"/>

            <Button Content="ОК" HorizontalAlignment="Center" Click="OKButton_Click" Height="32" Width="60"/>
            <Button Content="Cancel" HorizontalAlignment="Center" Click="Cancel_Click" Height="32" Width="60"/>
        </StackPanel>
    </Grid>
</Window>